{
  "appearances": {
    "viewport": {
      "description": "The size label for the current screen viewport based on the current screen width",
      "values": ["xs", "sm", "md", "lg", "xl"],
      "type": "state"
    }
  },
  "rules": [
    {
      "if": {
        "viewport": ["xs", "sm", "md"]
      },
      "tokens": {
        "borderWidth": 0,
        "paddingHorizontal": 24,
        "paddingVertical": 0
      }
    }
  ],
  "tokens": {
    "borderColor": {
      "red": 0.93725,
      "green": 0.93725,
      "blue": 0.93725,
      "alpha": 1
    },
    "borderRadius": 6,
    "borderStyle": "solid",
    "borderWidth": 1,
    "paddingHorizontal": 24,
    "paddingVertical": 24,
    "selectedButtonIcon": "PaletteIconCheck"
  }
}
