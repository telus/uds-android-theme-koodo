{
  "appearances": {
    "maxHeight": {
      "description": "Whether MultiselectFilter modal should expand responsively to content or a set maximu height",
      "values": [true],
      "type": "state"
    },
    "maxWidth": {
      "description": "Whether MultiselectFilter modal should expand to content or a set maximuh width",
      "values": [true],
      "type": "state"
    },
    "viewport": {
      "description": "The size label for the current screen viewport based on the current screen width",
      "values": ["xs", "sm", "md", "lg", "xl"],
      "type": "state"
    }
  },
  "rules": [
    {
      "if": {
        "viewport": ["xs"]
      },
      "tokens": {
        "buttonDirection": "column",
        "minHeight": "100%",
        "minWidth": "100%"
      }
    },
    {
      "if": {
        "maxHeight": true,
        "viewport": ["sm", "md", "lg", "xl"]
      },
      "tokens": {
        "maxHeightSize": 480
      }
    },
    {
      "if": {
        "maxWidth": true,
        "viewport": ["sm", "md", "lg", "xl"]
      },
      "tokens": {
        "maxWidthSize": 544
      }
    }
  ],
  "tokens": {
    "buttonDirection": "row",
    "headerFontColor": {
      "red": 0,
      "green": 0,
      "blue": 0,
      "alpha": 1
    },
    "headerFontName": "StagSans",
    "headerFontSize": 24,
    "headerFontWeight": 700,
    "headerLineHeight": 1.33333333333,
    "maxHeightSize": 0,
    "maxWidthSize": 0,
    "minHeight": 412,
    "minWidth": 320,
    "subHeaderFontName": "StagSans",
    "subHeaderFontSize": 16,
    "subHeaderFontWeight": 400,
    "subHeaderLineHeight": 1.5
  }
}
