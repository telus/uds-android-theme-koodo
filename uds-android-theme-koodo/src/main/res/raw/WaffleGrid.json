{
  "appearances": {
    "viewport": {
      "description": "The size label for the current screen viewport based on the current screen width",
      "values": ["xs", "sm", "md", "lg", "xl"],
      "type": "state"
    }
  },
  "rules": [
    {
      "if": {
        "viewport": ["xs"]
      },
      "tokens": {
        "rowSize": 2
      }
    },
    {
      "if": {
        "viewport": ["sm", "md"]
      },
      "tokens": {
        "rowSize": 3
      }
    },
    {
      "if": {
        "viewport": ["lg", "xl"]
      },
      "tokens": {
        "rowSize": 6
      }
    }
  ],
  "tokens": {
    "itemBorderColor": {
      "red": 0.78824,
      "green": 0.78431,
      "blue": 0.78431,
      "alpha": 1
    },
    "itemPadding": 16,
    "rowBorderWidth": 1,
    "rowSize": 6
  }
}
